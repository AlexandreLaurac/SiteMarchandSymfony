{# templates/sidebar.html.twig #}

<div class="col-md-2" style="padding: 10px;">
    <div class="card">
        <div class="card-header text-center">
            <h4><i class="fas fa-star"></i>
                {% trans %} colonne.titre {% endtrans %}
                <i class="fas fa-star"></i>
            </h4>
        </div>
        <div class="card-body">
            <ul class="list-group">
                {% for donneesProduit in donneesVues %}
                    <a href="{{ path('rayon', {'idCategorie' : donneesProduit.produit.categorie.id }) }}">
                        <li class="list-group-item text-center clickable">
                            <img src="{{ asset (donneesProduit.produit.visuel)}}" style="height: 40px;" />
                            <p> {{ donneesProduit.produit.libelle }} <br><i> {{ donneesProduit.nbVentes }} {% trans %} colonne.vente {% endtrans %} </i></p>
                        </li>
                    </a>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
