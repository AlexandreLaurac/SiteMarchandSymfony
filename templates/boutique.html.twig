{# templates/boutique.html.twig #}
{% extends "base.html.twig" %}

{% block title %}
    {% trans %} boutique.index.titre_entete {% endtrans %} 
{% endblock %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h1>
                <i class="fas fa-store"></i>
                {% trans with {'nbCategories' : nbCategories} %} boutique.index.titre_page {% endtrans %}
            </h1>
        </div>
        <div class="card-body row">
            {% for categorie in categories %}
                <div class="col-md-3">
                    <div class="card clickable" onclick="location = '{{path('rayon', {'idCategorie' : categorie.id}) }}'">
                        <img src="{{ asset(categorie.visuel) }}" class="card-img-top" alt="{{categorie.libelle}}" />
                        <div class="card-body">
                            <h4 class="card-title"> {{categorie.libelle}} </h4>
                            <p class="card-text"><i> {{categorie.texte}} </i></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
