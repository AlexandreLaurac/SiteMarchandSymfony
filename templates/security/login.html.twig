{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    Connexion
{% endblock %}

{% block body %}

    {#  Personnalisation du formulaire de connexion :
        le formulaire avait déjà été généré par Symfony, la personnalisation a
        consisté en l'ajout de div avec des classes particulières de Bootstrap
    #}

    <div class="card col-md-5 offset-4">
        <div class="card-header">
            <h3> <i class="fas fa-user-check"></i> Déjà Membre ? Connectez-vous </h3>
        </div>
        <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}">
                <div class="col-md-12 btn-group" style="padding:0px">
                    <button class="btn btn-primary" type="submit"> Connexion </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
